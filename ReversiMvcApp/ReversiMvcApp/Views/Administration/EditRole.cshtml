@model ReversiMvcApp.Models.ViewModels.Administration.EditRoleViewModel

@{
    ViewBag.Title = "Rol aanpassen";
}
<h1>Rol aanpassen</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditRole" method="get">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanpassen" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="index">Annuleren</a>
            </div>
        </form>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <h3 class="card-title">Gebruikers</h3>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <h5 class="card-text">@user</h5>
            }
        }
        else
        {
            <h5 class="card-text">Er zijn momenteel geen gebruikers toegewezen met deze rol.</h5>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="EditUsersInRole" asp-route-id="@Model.Id">Gebruikers toevoegen of verwijderen</a>
    </div>
</div>