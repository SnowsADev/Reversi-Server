@model ReversiMvcApp.Models.Spel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env;
@addTagHelper *, NetEscapades.AspNetCore.SecurityHeaders.TagHelpers

@{
    ViewData["Title"] = "Details";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    string userId = ViewData["UserID"].ToString();
}

@section Scripts {
    <!-- Swiper-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <!-- ChartJs-->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js "></script>

    <!-- Custom Scripts-->
    <script type="text/javascript" src="~/js/app.js"></script>
    <script type="text/javascript" src="~/js/vendor.js"></script>
    <script type="text/javascript" src="~/js/templates.js"></script>

    <link rel="stylesheet" type="text/css" href="~/css/style.min.css">
}

<h2>U bent de kleur: @Model.Spelers.FirstOrDefault(s => s.Id == userId).Kleur</h2>

<form method="post">
    <button class="btn btn-primary" asp-controller="Spellen" asp-action="GeefOp" asp-route-Id="@Model.ID">geef op</button>
</form>

<div id="everything">
    <aside id="swiper-container" class="swiper"></aside>
    <div id="main-content"></div>
    <aside id="charts-container"></aside>
</div>


<script type="text/javascript" asp-add-nonce>

    $(document).ready(function () {
        Game.init("production", "@userId", "@Model.ID");
    });
</script>

    


    

